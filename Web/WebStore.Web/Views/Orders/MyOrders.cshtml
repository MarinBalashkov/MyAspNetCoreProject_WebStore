@using WebStore.Web.ViewModels.Orders
@model IEnumerable<MyOrdersViewModel>

@{
    this.ViewData["Title"] = "My Orders";
}

<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<!-- Page info -->
<div class="page-top-info">
    <div class="container">
        <h4>@this.ViewData["Title"]</h4>
        <div class="site-pagination">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a> /
            <a asp-area="" asp-controller="Products" asp-action="Index">Shop</a>
        </div>
    </div>
</div>
<!-- Page info end -->
<hr>
@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header">
            Order Id : @item.Id
        </div>
        <div class="card-body">
            <h5 class="card-title">Expected Delivery Date</h5>
            <p class="card-text">@item.ExpectedDeliveryDateString</p>
            <h5 class="card-title">Order Status</h5>
            <p class="card-text">@item.Status</p>
            <h5 class="card-title">Total Order Price</h5>
            <p class="card-text text-danger">@item.TotalPrice</p>
            <a asp-controller="Orders" asp-action="MyOrderDetails" asp-route-orderId="@item.Id" class="btn btn-primary">Go to Details</a>
        </div>
    </div>
    <hr>
}
