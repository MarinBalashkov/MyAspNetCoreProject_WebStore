@model WebStore.Web.ViewModels.Reviews.UpdateViewModel
@{
    this.ViewData["Title"] = "Update Review";
}
<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: ["image paste table link code media"]
    });
</script>
<div>
    <form asp-controller="Reviews" asp-action="Update" method="post">
        <input type="hidden" name="ProductId" value="@this.Model.ProductId" />
        <input type="hidden" name="ReviewId" value="@this.Model.Id" />
        <div>
            <label for="Text"></label>
            <textarea name="Text" id="Text" class="form-control">@this.Model.Text</textarea>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Update Review" />
        </div>
    </form>
</div>
