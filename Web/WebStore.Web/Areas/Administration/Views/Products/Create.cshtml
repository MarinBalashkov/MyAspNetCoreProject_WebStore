@model WebStore.Web.ViewModels.Administration.Products.CreateProductInputViewModel
@{
    this.ViewData["Title"] = "Create products";
}

<h1>@this.ViewData["Title"]</h1>

<div class="col-md-4">
    <form asp-area="Administration" asp-controller="Products" asp-action="Create" class="form" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>@*use danger not red color for bootstrap them implementation*@
        </div>

        <div class="form-group">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="7"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var item in Model.SubCategories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.MainPicture"></label>
            <input asp-for="@Model.MainPicture" class="form-control" formenctype="multipart/form-data" />
            <span asp-validation-for="@Model.MainPicture" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.SecondaryPicturs"></label>
            <input asp-for="@Model.SecondaryPicturs" class="form-control" formenctype="application/x-www-form-urlencoded" />
            <span asp-validation-for="@Model.SecondaryPicturs" class="text-danger"></span>
        </div>
        <hr />
        <input name="MainCategoryId" type="hidden" value="@Model.MainCategoryId" class="form-control" />

        <input type="submit" value="Create" class="btn btn-primary" />
    </form>
</div>

